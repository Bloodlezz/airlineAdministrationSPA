{{> nav}}
<section id="viewCatalog" class="background-img">
    <a href="#/flight/add" class="add-flight">Add Flight +</a>
    <div class="added-flights">
        {{#each flights}}
            <a href="#/flight/details/{{_id}}" class="added-flight">
                <img src="{{img}}" alt="Flight picture"
                     class="picture-added-flight">
                <h3>{{destination}}</h3>
                <span>from {{origin}}</span><span>{{formatDate departureDate day="numeric" month="long" year="numeric"}}</span>
            </a>
        {{/each}}
    </div>
</section>
{{> footer}}