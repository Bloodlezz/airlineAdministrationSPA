{{> nav}}
<section id="viewMyFlights">
    <h3>Your Flights</h3>
    {{#each flights}}
        <div class="flight-ticket">
            <div class="flight-left">
                <img src="{{img}}" alt="Flight picture">
            </div>
            <div class="flight-right">
                <div>
                    <h3>{{destination}}</h3><span>{{formatDate departureDate}}</span>
                </div>
                <div>
                    from {{origin}} <span>{{departureTime}}</span>
                </div>
                <p>{{seats}} Seats ({{cost}}$ per seat) </p>
                <a href="#/flight/delete/{{_id}}" class="remove">REMOVE</a>
                <a href="#/flight/details/{{_id}}" class="details">Details</a>
            </div>
        </div>
    {{/each}}
    {{#if noFlights}}
        <h4>You have no flights yet.</h4>
    {{/if}}
</section>
{{> footer}}